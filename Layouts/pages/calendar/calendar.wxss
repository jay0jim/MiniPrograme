.calendar_panel{
  width: 100%;
  height: calc(100% - 56rpx);
}
.calendar_panel_two{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.calendar_box{
  width: 100%;
  background: aquamarine;
  overflow: hidden;
  display: flex;
  height: calc(100% / 6);
  align-items: center;
}
