<view class="home-container">

  <view class="userinfo-container" bindtap="showUserInfo">
    <view class="userinfo-avatar-wrapper" open-type="chooseAvatar" bind:chooseavatar="onChooseAvatar">
      <image class="userinfo-avatar" src="{{avatarURL}}"></image>
    </view>
    <text class="userinfo-nickname">{{nickname}}</text>
  </view>

  <view class="action-container">
    <view class="scan-code-container">
      <view class="scan-code-wrapper">
        <image class="scan-code" src="../../icons/scan.png"></image>
      </view>
      <text class="scan-code-text">扫码参加</text>
    </view>
    <view class="host-container">
      <view class="host-wrapper">
        <image class="host" src="../../icons/host.png"></image>
      </view>
      <text class="host-text">发起活动</text>
    </view>
  </view>


</view>

<van-popup show="{{ showUserInfoPopup }}" round bind:close="onClose" >

  <view class="loggin-container">
    <button class="avatar-row-container" open-type="chooseAvatar" bind:chooseavatar="onChooseAvatar">
      <text>头像</text>
      <image class="userinfo-avatar" src="{{avatarURL}}"></image>
    </button>
    <view class="nickname-row-container"></view>
    <text>昵称限2-16个字符，一个汉字为2个字符</text>
    <view class="confirm-button">确认</view>
  </view>


</van-popup>
