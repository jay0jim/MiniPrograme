.home-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
}
.userinfo-avatar-wrapper {
  /* background-color: blue; */
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
}
.userinfo-avatar {
  overflow: hidden;
  width: 80rpx;
  height: 80rpx;
  margin: 10rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  margin-left: 10rpx;

}


.action-container {
  width: 90%;
  /* height: 300rpx; */
  margin-top: 25vh;
  /* background-color: blueviolet; */

  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.scan-code-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.scan-code-wrapper {
  width: 300rpx;
  height: 300rpx;
  /* border-radius: 50%; */
  margin-bottom: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-width: 4px;
  border-color: brown;
}
.scan-code {
  width: 200rpx;
  height: 200rpx;
}
.host-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.host-wrapper {
  width: 300rpx;
