/* pages/year/year.wxss */
.year_background {
  display: flex;
  flex-direction: column;
  background-color: #decade;
  min-height: 100vh;
  justify-content: flex-start;
  align-items: flex-start;
}

.year_title {
  height: 60rpx;
  width: 100vw;
  height: 6vh;
  background-color: red;
  font-size: 67rpx;
  font-weight: 800;
  padding-left: 20rpx;
}

.year_cell_container{
  display: flex;
  /* background-color: blue; */
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: flex-start;
  align-content: space-around;
  height: 89vh;
  padding-left: 23rpx;
  padding-right: 23rpx;
}

.year_cell {
  display: flex;
  /* background-color: brown; */
  width: 30vw;
  height: 20vh;
  flex-direction: column;
  justify-content: start;
  /* margin: 10rpx; */
}

.year_cell_title {
  display: flex;
  width: 90%;
  /* background-color: burlywood; */
  font-size: 40rpx;
  font-weight: 900;
  height: 25%;
  align-items: center;
  /* padding-left: 10rpx; */
}

.year_cell_num_container {
  display: flex;
  flex-wrap: wrap;
  /* padding-bottom: 7%; */
  background-color: burlywood;
  height: 100%;
  align-content: flex-start;
}

.year_cell_num {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 14%;
  height: calc(14%);
  font-size: 22rpx;
  font-weight: 900;
}