.calendar-container {
  display: flex;
  flex-direction: column;
}

.calendar-month-name {
  background-color: blueviolet;
  height: 100rpx;
  width: 100vw;
  font-size: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.calendar-day-name-container {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  background-color: burlywood;
}

.calendar-day-name {
  width: 14vw;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;

}

.calender-day-cell-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
}

.calender-day-cell {
  width: 14vw;
  height: calc(16vw);
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 12rpx;
}

.unchecked {
  background-color: '#f4f4f4';
}

.checked {
  background-color: crimson;
}

